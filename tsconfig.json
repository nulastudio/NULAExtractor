{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "outDir": "dist/lib",
    "rootDirs": ["src", "test"],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": []
}
